# Example environment file for Watchtower (services/watchtower/.env.example)
# Copy to `.env` and fill sensitive values before starting.

# Timezone
TZ=Europe/Brussels

# Watchtower options
WATCHTOWER_TIMEOUT=30s
WATCHTOWER_NO_STARTUP_MESSAGE=true
WATCHTOWER_CLEANUP=true
# Cron-style schedule (seconds fields supported). Default example: weekly on Sundays at 6 AM
WATCHTOWER_SCHEDULE="0 0 6 * * 0"

# Notification settings
# Delay between updates and notification in minutes
WATCHTOWER_NOTIFICATION_EMAIL_DELAY=2
WATCHTOWER_NOTIFICATIONS_HOSTNAME=raspberrypi

# Email (SMTP) settings for Watchtower notifications - leave blank if unused
WATCHTOWER_NOTIFICATION_EMAIL_FROM=
WATCHTOWER_NOTIFICATION_EMAIL_TO=
WATCHTOWER_NOTIFICATION_EMAIL_SERVER=
WATCHTOWER_NOTIFICATION_EMAIL_SERVER_USER=
WATCHTOWER_NOTIFICATION_EMAIL_SERVER_PASSWORD=
WATCHTOWER_NOTIFICATION_EMAIL_SERVER_PORT=
